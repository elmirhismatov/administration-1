pipeline {
    agent any
    options {
        timestamps()
    }

    stages {

        stage("Start Install Libraries") {
            steps {
                sh 'python3 -m pip install -r moduls.txt'
                echo 'End install libraries'
            }
        }

        stage("Start PyTest") {
            steps {
                sh 'pytest administration-1/test.py --junitxml=administration-1/report/results.xml'
                echo 'Pytest is ready'
            }
        }

        stage("app start...") {
            steps {
                sh 'python3 administration-1/app.py start'
                echo 'Lab work done :) ...'
            }
        }
    }
}
