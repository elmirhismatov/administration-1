pipeline {
    agent any
    options {
        timestamps()
    }

    stages {

        stage("Start Install Libraries") {
            steps {
                sh 'python3 -m pip install -r moduls.txt'
                echo 'End install libraries'
            }
        }

        stage("Start PyTest") {
            steps {
                sh 'pytest test.py --junitxml=results.xml'
                echo 'Pytest is ready'
            }
        }

        stage("app init...") {
            steps {
                sh 'python3 app.py init'
                echo 'build administration-1 is right, great job'
            }
        }
        
        stage("app fill...") {
            steps {
                sh 'python3 app.py fill'
                echo 'build administration-1 is right, great job'
            }
        }
        
        stage("app show...") {
            steps {
                sh 'python3 app.py show Orders'
                echo 'build administration-1 is right, great job'
            }
        }
        
        stage("app show...") {
            steps {
                sh 'python3 app.py show Clients'
                echo 'build administration-1 is right, great job'
            }
        }
    }
}
